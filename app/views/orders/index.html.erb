<table id="orders" class="table table-striped table-bordered table-hover dataTable no-footer" data-source="<%= orders_url(format: "json") %>">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
    </tr>
  </thead>
  <tbody>
  </tbody>
</table>

<script type="text/javascript">
  jQuery(function() {
  return $('#orders').dataTable({
